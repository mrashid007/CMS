    <script type="text/javascript">
        $(function () {
            $.ajax({
                url: '/Home/CheckSessionTimeOut',
                type: "POST",
                success: function (result) {
                    if (result == "True") {
                        window.top.location = "/Account/Login";
                    }
                },
                complete: function () {

                }
            });
            LoadAdmissionDepartment();
            LoadBatch();
            LoadCoachingSession();
        });
        function LoadAdmissionDepartment() {
            $.ajax({
                url: '/Common/LoadDepartment',
                async: true,
                success: function (result) {
                    var mySelect = $('#ddlAdmissionDept');
                    mySelect.append(
                        $('<option></option>').val(0).html('---Select---')
                    );
                    $.each(result, function (val, text) {
                        mySelect.append(
                            $('<option></option>').val(text.val).html(text.text)
                        );
                    });
                },
                error: function (result, textStatus, jqXHR) {

                }
            });
        }
        function LoadCoachingSession() {
            $.ajax({
                url: '/CoachingSession/LoadCoachingSessions',
                async: true,
                success: function (result) {
                    var mySelect = $('#ddlCoachingSession');
                    mySelect.append(
                        $('<option></option>').val(0).html('---Select---')
                    );
                    $.each(result, function (val, text) {
                        mySelect.append(
                            $('<option></option>').val(text.Id).html(text.Name)
                        );
                    });
                },
                error: function (result, textStatus, jqXHR) {

                }
            });
        }

        function LoadBatch() {
            $.ajax({
                url: '/Common/LoadBatch',
                async: true,
                success: function (result) {
                    var mySelect = $('#ddlBatch');
                    mySelect.append(
                        $('<option></option>').val(0).html('---Select---')
                    );
                    $.each(result, function (val, text) {
                        mySelect.append(
                            $('<option></option>').val(text.val).html(text.text)
                        );
                    });
                },
                error: function (result, textStatus, jqXHR) {

                }
            });
        }

        function SendSMS() {
            var selectedValues = $('#tblDataGrid').datagrid('getChecked');
            if (selectedValues.length <= 0) {
                toastr.warning("Please Select Student to Print Id Card");
                return;
            }

            var stdCodeList = [];

            $.grep(selectedValues, function (item, row) {
                var student = { Code: item.Code, MobileNo: item.MobileNo };
                stdCodeList.push(student);
            });
            $('#btnSend').prop('disabled', true);

            var withcode = false;
            if ($('#withcode').is(":checked")==true) {
                
                withcode = true;
            }
           
            var msg = $('#txtMessage').val();
            //, message: msg,str:'WithCode' 
            $.ajax({
                url: '/SMS/SendSMSToNumber',
                type: "POST",
                //traditional: true,
                dataType: 'json',
                async: true,
                contentType: 'application/json',
                data: JSON.stringify({ stdList: stdCodeList, message: msg, str: 'SendCode', withcode: withcode }),
                success: function (result) {
                    if (result.IsSuccess == true)
                        toastr.success(result.Message);
                    else toastr.error(result.Message);
                },
                complete: function () {

                }
            });
        }

        function Search() {
            var sessionId = $('#ddlCoachingSession').val();
            var stdName = $('#stdName').val();
            var deptId = $('#ddlAdmissionDept').val();
            var batchId = $('#ddlBatch').val();

            $.ajax({
                url: '/SMS/SearchStudent',
                type: 'Post',
                data: JSON.stringify({ studentName: stdName, departmentId: deptId, batchId: batchId, sessionId: sessionId }),
                dataType: 'json',
                async: true,
                contentType: 'application/json',
                success: function (result) {
                    $('#tblDataGrid').datagrid('loadData', result);
                },
                error: function (result, textStatus, jqXHR) {

                }
            });
        }
        function Clear() {
            $('#stdName').val('');
            $('#ddlAdmissionDept').val('');
            $('#ddlBatch').val('');
            $('#txtMessage').val('');
            $('#btnSend').prop('disabled', false);
            $('#tblDataGrid').datagrid('loadData', []);
        }
    </script>
