                    <div style="margin-top:1%;padding-left: 10px;">
                        <input type="button" value="Search" class="br-buttons" onclick="Search()" />
                    </div>
                </div>

            </fieldset>

        </div>

        <div class="ViewPanel" style="height: 350px;overflow-y: scroll">
