    <script type="text/javascript">
        var hdfPartyId = 0;
      
        $(function() {
            $.ajax({
                url: '/Home/CheckSessionTimeOut',
                type: "POST",
                success: function (result) {
                    if (result == "True") {
                        window.top.location = "/Account/Login";
                    }
                },
                complete: function () {
                    // setupSessionTimeoutCheck();
                }
            });
            LoadDepartment();
        });
        function LoadDepartment() {
            $.ajax({
                url: '/Common/LoadDepartment',
                async: true,
                success: function (result) {
                    var mySelect = $('#ddlDept');
                    mySelect.append(
                        $('<option></option>').val(0).html('---Select---')
                    );
                    $.each(result, function (val, text) {
                        mySelect.append(
                            $('<option></option>').val(text.val).html(text.text)
                        );
                    });
                },
                error: function (result, textStatus, jqXHR) {

                }
            });
        }
        function Save() {
            var name = $('#txtPartyName').val();
            var fatherName = $('#txtFatherName').val();
            var motherName = $('#txtMotherName').val();
            var mobileNo = $('#txtPartyMobileNo').val();
            var nIdNo = $('#txtNidNo').val();
            var email = $('#txtEmail').val();
            var parmanentAddress = $('#txtParmanentAddress').val();
            var presentAddress = $('#txtPresentAddress').val();
            var deptId = $('#ddlDept').val();
            var acctype = $('#accountType').val();
            var remarks = $('#txtRemarks').val();

            if (name == "") {
                toastr.warning("Party Name Required");
                return;
            }
            if (mobileNo == "") {
                toastr.warning("Party Modile No Required");
                return;
            }
            if (deptId < 1) {
                toastr.warning("Select a Department");
                return;
            }
            

            var PartyId = 0;
            if (hdfPartyId > 0)
                PartyId = hdfPartyId;

            var generalInfo = {
                PartyId: hdfPartyId,
                Name: name,
                FatherName: fatherName,
                MotherName: motherName,
                ParmanentAddress: parmanentAddress,
                PresentAddress:presentAddress,
                ContactNo: mobileNo,
                Email: email,
                DeptId: deptId,
                Remarks: remarks,
                NId: nIdNo,
                AccountType: acctype
            };

            $('#btnSave').prop('disabled', true);

            $.ajax({
                url: '/Party/Save',
                type: 'post',
                data: JSON.stringify({ partyinfo: generalInfo }),
                dataType: 'json',
                async: true,
                contentType: 'application/json',
                success: function (result) {
                    if (result.IsSuccess == true) {
                        $('#btnSave').prop('disabled', true);
                       
                        toastr.success(result.Message);
                    }
                    else toastr.error(result.Message);
                }
            });
        }
        function Close() {
            window.location="/Party/Index";
        }
        function Clear() {
            window.location = "/Party/Create";
        }

 </script>
